{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "./compiled",
        "sourceMap": false,
        "watch": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "typeRoots": [
          "node_modules/@types"
        ],
        "lib": [
          "es2017",
          "dom"
        ],
        "types": [
            "node"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "WebConsole/view/**",
        "compiled"
    ]
}